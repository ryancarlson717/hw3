<h1><%= @place["name"] %></h1>

<h2>Posts</h2>

<ul>
  <% for entry in @entries %>
    <h3>
      <%= entry["title"] %>
    </h3>
    <p>
      <%= entry["posted_on"] %>
    </p>
    <p>
      <%= entry["description"] %>
    </p>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>