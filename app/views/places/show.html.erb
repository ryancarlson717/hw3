<h1><%= @place["name"] %></h1>

<h2>Posts</h2>

<ul>
  <% for entry in @entries %>
    <li>
      <p>
        <%= entry["title"] %>
      </p>
      <p>
        <%= entry["posted_on"] %>
      </p>
      <p>
        <%= entry["description"] %>
      </p>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>